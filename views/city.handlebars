{{>header}}
<div class="signer-title">
    <h2>Wir die Unterzeichner und Bürger von {{city}} verlangen die Einführung eines Spargel Emoji!</h2>
</div>
<div class="">
    <p id="map-text">{{city}}:</p>
    <div id="signerMap"></div>
</div>
<div class="signer-container">
    {{#each signers}}
        {{#if this.url}}
            <div class=info-box>
                <a class="signers" href="//{{this.url}}">{{this.first}} {{this.last}}</a><p class="signers">{{#if this.age}} ({{this.age}}){{/if}}</p>
            </div>
        {{else}}
            <div class=info-box>
                <p class="signers">{{this.first}} {{this.last}}{{#if this.age}} ({{this.age}}){{/if}}</p>
            </div>
        {{/if}}
    {{/each}}
</div>
<a class="button" id="keep" href="javascript:history.back()">Back</a>
<p>© Xiroi</p>
